<script>

new Chart(document.getElementById("weekcanvas"), {
    type: 'bar',
    data: {
        labels: ['월', '화', '수', '목', '금'],
        datasets: [{
            label: '근무 시간',
            data: [
            		${weeklist}
            	],
            borderColor: "rgba(255, 201, 14, 1)",
            backgroundColor: "rgba(255, 201, 14, 0.5)",
            fill: false,
        }]
    },
    options: {
        responsive: false,
        tooltips: {
            mode: 'index',
            intersect: false,
            callbacks: {
                title: function(tooltipItems, data) {
                    return data.labels[tooltipItems[0].datasetIndex];
                }
            }
        },
        hover: {
            mode: 'nearest',
            intersect: true
        },
        scales: {
            xAxes: [{
                display: true,
                scaleLabel: {
                    display: false,
                    labelString: 'x축'
                },
                ticks: {
                    autoSkip: false
                }
            }],
            yAxes: [{
                display: true,
                ticks: {
                    suggestedMin: 0,
                },
                scaleLabel: {
                    display: false,
                    labelString: 'y축'
                }
            }]
        }
    }
});
</script>	
	
	
	

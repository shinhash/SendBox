<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
<script> 
$(function(){
	
	myUseVacateCnt = 0; // 사용 일수
	myAllVacateCnt = 30; // 내 연가
	
	$.ajax({
		url	: "/vacate/empVacateInfo",
		dataType : "json",
		method : "post",
		success : function(data){
			
			console.log("data : ", data);
			myUseVacateCnt = parseInt(data.myUseVacateCnt);
			
			
			// 도넛형 차트에 들어갈 데이터 설정
			data = { 
				datasets: [{ 
					backgroundColor: ['#357BFE','#97AED8'], 
					data: [myUseVacateCnt, myAllVacateCnt],
		            fill: false,
				}], // 라벨의 이름이 툴팁처럼 마우스가 근처에 오면 나타남
				labels: ['사용휴가','전체연가'],
			}; 
			// 도넛형 차트 
			var ctx2 = document.getElementById("myChart2"); 
			var myDoughnutChart = new Chart(ctx2, { 
				type: 'doughnut', 
				data: data, 
				options: {
					maintainAspectRatio: false,
			    	tooltips: {
				        backgroundColor: "rgb(255,255,255)",
				        bodyFontColor: "#858796",
				        borderColor: '#dddfeb',
				        borderWidth: 1,
				        xPadding: 15,
				        yPadding: 15,
				        displayColors: false,
				        caretPadding: 10,
					},
					hover: {
			            mode: 'nearest',
			            intersect: true
			        },
			        legend: { display: true },
			      	cutoutPercentage: 70,
				},
			});
			var i = 1;
			// 도넛 가운데 공간에 들어갈 데이터 설정 ==> 남은 일수
			var myVacateDate = parseInt(myAllVacateCnt - myUseVacateCnt);
			$("#myVacationResPer").text(myVacateDate + "일")
		},
		error	: function(error){
			alert("error code : ", error.status);
		}
	});
});
</script>
	



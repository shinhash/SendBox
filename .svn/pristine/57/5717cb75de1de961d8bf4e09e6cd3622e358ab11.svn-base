									<input type="radio" name="reportOptCont" value="오후"/>오후
									<form:errors cssClass="errormsg" path="reportOptCont"/>
								</td>
							</tr>
					</c:if>
			</table>
			<script>
				$(function(){
					$('input:radio[value="${reportVo.reportOptCont}"]').prop('checked', true);
					$('#startDt').val("${startDt}");
					$('#endDt').val("${endDt}");
				})
			</script>
			
			
			

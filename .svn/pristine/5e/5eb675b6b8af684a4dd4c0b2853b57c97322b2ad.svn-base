					      posLeft = posX + secMargin + "px";
					      posTop = posY - menuHeight - secMargin + "px";
					    }
					    else {
					      //Case 4: default values:
					      posLeft = posX + secMargin + "px";
					      posTop = posY + secMargin + "px";
					    };
					    //Display contextmenu:

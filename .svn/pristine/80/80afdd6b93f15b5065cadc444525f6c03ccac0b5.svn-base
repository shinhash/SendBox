<insert id="insertApproval" parameterType="kr.or.ddit.report.vo.ApprovalVO">
INSERT INTO approval (
    approv_id,
    report_id,
    emp_id,
    approv_dt,
    check_yn,
    approv_step,
    approv_result,
    approv_text
) SELECT 
	'APRV-'|| LPAD(approval_seq.nextval, 10, '0'),
    #{reportId},
    #{empId},
    SYSDATE,
    'N',
    (select count(*) + 1 as cnt from approval where report_id = #{reportId}),
	#{approvResult},
	#{approvText}
		    
    FROM DUAL
</insert>


<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
<script> 
$(function(){
	
	getListAjax('/reporting');
	
	myUseVacateCnt = 0; // ÏÇ¨Ïö© ÏùºÏàò
	myAllVacateCnt = 0; // ÎÇ¥ Ïó∞Í∞Ä
	
	
	$.ajax({
		url	: "/vacate/empVacateinfo",
		dataType : "json",
		method : "post",
		success : function(data){
			
			console.log("data : ", data);
			
			myUseVacateCnt = parseInt(data.myUseVacateCnt);
			myAllVacateCnt = parseInt(data.myVacateDayCnt - myUseVacateCnt);
			
			console.log(myUseVacateCnt)
			console.log(myAllVacateCnt)
			
			// ÎèÑÎÑõÌòï Ï∞®Ìä∏Ïóê Îì§Ïñ¥Í∞à Îç∞Ïù¥ÌÑ∞ ÏÑ§Ï†ï
			data = { 
				datasets: [{ 
					backgroundColor: ['#357BFE','#97AED8'], 
					data: [myUseVacateCnt, myAllVacateCnt]
				}], // ÎùºÎ≤®Ïùò Ïù¥Î¶ÑÏù¥ Ìà¥ÌåÅÏ≤òÎüº ÎßàÏö∞Ïä§Í∞Ä Í∑ºÏ≤òÏóê Ïò§Î©¥ ÎÇòÌÉÄÎÇ®
				labels: ['ÏÇ¨Ïö©Ìú¥Í∞Ä','ÎÇ®ÏùÄÏó∞Í∞Ä'],
			}; 
			// ÎèÑÎÑõÌòï Ï∞®Ìä∏ 
			var ctx2 = document.getElementById("myChart2"); 
			var myDoughnutChart = new Chart(ctx2, { 
				type: 'doughnut', 
				data: data, 
				options: {
					maintainAspectRatio: false,
			    	tooltips: {
				        displayColors: false,
					},
			        legend: { display: true },
			      	cutoutPercentage: 70,
				},
			});
			// ÎèÑÎÑõ Í∞ÄÏö¥Îç∞ Í≥µÍ∞ÑÏóê Îì§Ïñ¥Í∞à Îç∞Ïù¥ÌÑ∞ ÏÑ§Ï†ï ==> ÎÇ®ÏùÄ ÏùºÏàò
			var myVacateDate = myAllVacateCnt;
			$("#myVacationResPer").text(myVacateDate + "Ïùº")
		},
		error	: function(error){
			alert("error code : ", error.status);
		}
	});
});
</script>	
	
	




